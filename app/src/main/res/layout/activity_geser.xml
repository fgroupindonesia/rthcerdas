<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    tools:context=".GeserActivity">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/imageArrow"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentBottom="false"
        android:layout_marginLeft="55dp"
        android:elevation="-4dp"
        android:padding="20dp"
        android:scaleType="fitXY"
        android:src="@drawable/left_anim" />

    <TextView
        android:id="@+id/textViewInfo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="false"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="30dp"
        android:text="drag the food..." />

    <ImageView
        android:id="@+id/imageTrash"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="45dp"
        android:layout_marginRight="25dp"
        android:onClick="clearTrash"
        android:scaleType="fitXY"
        android:tag="banana"
        app:srcCompat="@drawable/trash_empty" />

    <ImageView
        android:id="@+id/imageBanana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tag="banana"
        app:srcCompat="@drawable/banana48" />

    <ImageView
        android:id="@+id/imageCarrot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tag="carrot"
        app:srcCompat="@drawable/carrot48" />

    <ImageView
        android:id="@+id/imageGinger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tag="ginger"
        app:srcCompat="@drawable/ginger48" />

    <TextView
        android:id="@+id/textViewInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="30dp"
        android:text="drag the food..." />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/imageMonkeyBoth"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="false"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:elevation="-4dp"
        android:padding="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/girl_come" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/imageMonkey"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:elevation="-4dp"
        android:padding="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/happy_waiting" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/imageMonkeyGirl"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:elevation="-4dp"
        android:padding="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/girl_come" />

    <TextView
        android:id="@+id/textViewMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="150dp"
        android:onClick="helpHim" />

</RelativeLayout>